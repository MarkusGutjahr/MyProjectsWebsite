<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#E6E6E6" /> <!-- Background color -->
            <corners android:radius="4dp" /> <!-- Rounded corners for the background -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#03A9F4" /> <!-- Yellow color -->
                <corners android:radius="4dp" /> <!-- Rounded corners for the progress -->
            </shape>
        </clip>
    </item>
</layer-list>
